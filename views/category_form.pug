extends layout 

block content 

  h1 #{title}
  form(method="POST") 
    div.form-group
      label(for="name") Category:
      input#name.form-control(type="text" placeholder="Clothing,food,etc." name="name" required value=(undefined===category?"":category.name))
    div.form-group
      label(for="description") Description:
      textarea#description.form-control(name="description" placeholder="Description" required)=undefined===item?"":item.description 
    button.btn.btn-primary(type="submit") Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg